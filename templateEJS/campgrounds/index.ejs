<% layout("boilerplate/boilerplate") -%>

    <h1 class="mb-5">Camping Grounds</h1>

    <% for(let ground of foundGrounds){ %>

        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4"><img src="<%= ground.image %>" height="100%" width="100%" class="image-fluid"
                        alt="<%= ground.title %>">
                </div>
                <div class="card-body col-md-8">
                    <h5 class="card-title">
                        <%= ground.title %>
                    </h5>
                    <p class="card-text">
                        <%= ground.description %>
                    </p>
                    <p class="text-muted"><%= ground.location %></p>
                    <a href="/campgrounds/<%= ground.id %> " class="btn btn-primary">Select</a>
                </div>
            </div>
        </div>
        <% } %>