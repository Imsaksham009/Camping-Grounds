<div id='map' class="mb-4" style='width: 100%; height: 500px;'></div>

    <h1 class="mb-5">Camping Grounds</h1>

    <% for(let ground of foundGrounds){ %>

        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4"><img src="<%= ground.image.url %>" height="100%" width="100%" class="image-fluid"
                        alt="<%= ground.image.filename %>">
                </div>
                <div class="card-body col-md-8">
                    <h5 class="card-title">
                        <%= ground.title %>
                    </h5>
                    <p class="card-text">
                        <%= ground.description %>
                    </p>
                    <p class="text-muted"><%= ground.location %></p>
                    <a href="/campgrounds/<%= ground.id %> " class="btn btn-primary">Select</a>
                </div>
            </div>
        </div>
        <% } %>



